<?xml version="1.0" encoding="utf-8"?>
<!-- Hardware acceleration enabled for better rendering performance -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:hardwareAccelerated="true">
  <uses-permission android:name="android.permission.VIBRATE"/>
  <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
  <uses-permission android:name="android.permission.RECORD_AUDIO"/>
  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.WAKE_LOCK"/>

  <!-- User dictionary access for word suggestions -->
  <uses-permission android:name="android.permission.READ_USER_DICTIONARY"/>

  <!-- In-app update installation -->
  <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES"/>

  <!-- Storage permissions - deprecated on Android 11+ (API 30+), use scoped storage instead -->
  <!-- These are only needed for Android 10 and below -->
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="29"/>
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="29"/>

  <!-- For Android 11+ (API 30+), use scoped storage via MediaStore or SAF (Storage Access Framework) -->
  <!-- No explicit permission needed for app-specific directories (getExternalFilesDir()) -->

  <application android:label="@string/app_name" android:allowBackup="true" android:icon="@mipmap/ic_launcher" android:hardwareAccelerated="true">
    <!-- CleverKeys Neural Keyboard Service -->
    <!-- FIX: Removed applicationIdSuffix ".debug" from build.gradle to fix keyboard crash -->
    <service android:name="tribixbite.cleverkeys.CleverKeysService"
             android:label="CleverKeys Neural Keyboard"
             android:permission="android.permission.BIND_INPUT_METHOD"
             android:exported="true"
             android:directBootAware="true">
      <intent-filter>
        <action android:name="android.view.InputMethod"/>
      </intent-filter>
      <meta-data android:name="android.view.im" android:resource="@xml/method"/>
    </service>

    <activity android:name="tribixbite.cleverkeys.SettingsActivity" android:icon="@mipmap/ic_launcher" android:label="@string/app_name" android:theme="@style/settingsTheme" android:exported="true" android:directBootAware="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
      </intent-filter>
    </activity>

    <activity android:name="tribixbite.cleverkeys.SettingsPreferenceActivity" android:label="@string/settings_title" android:theme="@style/settingsTheme" android:exported="true" android:directBootAware="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.DEFAULT"/>
      </intent-filter>
    </activity>

    <activity android:name="tribixbite.cleverkeys.LauncherActivity" android:icon="@mipmap/ic_launcher" android:theme="@style/appTheme" android:exported="true" android:directBootAware="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity android:name="tribixbite.cleverkeys.SwipeCalibrationActivity" android:label="@string/pref_swipe_calibration_title" android:theme="@style/settingsTheme" android:exported="true" android:directBootAware="true"/>

    <activity android:name="tribixbite.cleverkeys.NeuralSettingsActivity" android:label="Neural Settings" android:theme="@style/settingsTheme" android:exported="true" android:directBootAware="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.DEFAULT"/>
      </intent-filter>
    </activity>

    <activity android:name="tribixbite.cleverkeys.DictionaryManagerActivity" android:label="Dictionary Manager" android:theme="@style/settingsTheme" android:exported="true" android:directBootAware="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.DEFAULT"/>
      </intent-filter>
    </activity>

    <activity android:name="tribixbite.cleverkeys.LayoutManagerActivity" android:label="Keyboard Layouts" android:theme="@style/settingsTheme" android:exported="true" android:directBootAware="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.DEFAULT"/>
      </intent-filter>
    </activity>

    <activity android:name="tribixbite.cleverkeys.ThemeSettingsActivity" android:label="Keyboard Themes" android:theme="@style/settingsTheme" android:exported="true" android:directBootAware="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.DEFAULT"/>
      </intent-filter>
    </activity>

    <activity android:name="tribixbite.cleverkeys.ExtraKeysConfigActivity" android:label="Extra Keys Configuration" android:theme="@style/settingsTheme" android:exported="true" android:directBootAware="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.DEFAULT"/>
      </intent-filter>
    </activity>

    <activity android:name="tribixbite.cleverkeys.AutoCorrectionSettingsActivity" android:label="Auto-Correction Settings" android:theme="@style/settingsTheme" android:exported="true" android:directBootAware="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.DEFAULT"/>
      </intent-filter>
    </activity>

    <!-- ClipboardSettingsActivity removed - settings now inline in main SettingsActivity -->

    <activity android:name="tribixbite.cleverkeys.NeuralBrowserActivity" android:label="Neural Model Browser (Legacy)" android:theme="@style/settingsTheme" android:exported="true" android:directBootAware="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.DEFAULT"/>
      </intent-filter>
    </activity>

    <activity android:name="tribixbite.cleverkeys.neural.NeuralBrowserActivityM3" android:label="Neural Model Browser (Material 3)" android:theme="@style/settingsTheme" android:exported="true" android:directBootAware="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.DEFAULT"/>
      </intent-filter>
    </activity>

    <activity android:name="tribixbite.cleverkeys.BackupRestoreActivity" android:label="Backup &amp; Restore" android:theme="@style/settingsTheme" android:exported="true" android:directBootAware="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.DEFAULT"/>
      </intent-filter>
    </activity>

    <activity android:name="tribixbite.cleverkeys.TestActivity" android:exported="true"/>

    <activity android:name="tribixbite.cleverkeys.SwipeDebugActivity" android:label="Swipe Debug Log" android:theme="@style/settingsTheme" android:exported="true" android:directBootAware="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.DEFAULT"/>
      </intent-filter>
    </activity>
  </application>

  <!-- To query enabled input methods for voice IME detection -->
  <queries>
    <intent>
      <action android:name="android.view.InputMethod" />
    </intent>
  </queries>
</manifest>
