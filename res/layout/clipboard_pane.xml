<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/colorKeyboard"
    android:hardwareAccelerated="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <!-- Combined row: Tabs + Search + Close -->
  <LinearLayout
      android:id="@+id/clipboard_search_bar"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      android:paddingStart="4dp"
      android:paddingEnd="4dp"
      android:background="?attr/colorKey">

    <!-- History tab (default, highlighted) -->
    <TextView
        android:id="@+id/tab_history"
        android:text="ðŸ“‹"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:textSize="20sp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Recent clipboard history"/>

    <!-- Pinned tab -->
    <TextView
        android:id="@+id/tab_pinned"
        android:text="ðŸ“Œ"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:textSize="20sp"
        android:alpha="0.5"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Pinned items"/>

    <!-- Todos tab -->
    <TextView
        android:id="@+id/tab_todos"
        android:text="âœ“"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:textSize="20sp"
        android:alpha="0.5"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="To-do items"/>

    <!-- Search field (fills remaining space) -->
    <TextView
        android:id="@+id/clipboard_search"
        android:hint="Search..."
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="?attr/colorLabel"
        android:textColorHint="?attr/colorSubLabel"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:clickable="true"
        android:focusable="true"/>

    <!-- Date filter icon -->
    <TextView
        android:id="@+id/clipboard_date_filter"
        android:text="ðŸ“…"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:textSize="16sp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackgroundBorderless"/>

    <!-- Close/dismiss clipboard pane button -->
    <ImageButton
        android:id="@+id/clipboard_close_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/arrow_down_float"
        android:tint="?attr/colorLabel"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Close clipboard"
        android:scaleType="centerInside"
        android:padding="4dp"/>

  </LinearLayout>

  <!-- Divider below header -->
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="?attr/clipboard_divider_color"/>

  <!-- Content area (switches based on tab) -->
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1">

    <tribixbite.cleverkeys.ClipboardHistoryView
        android:id="@+id/clipboard_history_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?attr/clipboard_divider_color"
        android:dividerHeight="?attr/clipboard_divider_height"/>

  </ScrollView>

</LinearLayout>
