<?xml version="1.0" encoding="utf-8"?>
<!-- Simplified settings for PreferenceFragmentCompat (AndroidX compatible) -->
<!-- Custom preferences (LayoutsPreference, ExtraKeysPreference) use deprecated android.preference.* -->
<!-- Access full layouts/extra keys via the main Compose settings UI -->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
  <PreferenceCategory android:title="Layout">
    <Preference android:key="layout_manager" android:title="Keyboard Layouts" android:summary="Configure keyboard layouts"/>
    <Preference android:key="extra_keys_config" android:title="Extra Keys" android:summary="Configure extra keys"/>
    <ListPreference android:key="number_row" android:title="Number Row" android:summary="%s" android:defaultValue="no_number_row" android:entries="@array/pref_show_number_row_entries" android:entryValues="@array/pref_show_number_row_values"/>
    <ListPreference android:key="show_numpad" android:title="Numpad" android:summary="%s" android:defaultValue="1" android:entries="@array/pref_show_numpad_entries" android:entryValues="@array/pref_show_numpad_values"/>
  </PreferenceCategory>
  <PreferenceCategory android:title="Typing">
    <SwitchPreferenceCompat android:key="word_prediction_enabled" android:title="Word Prediction" android:summary="Show word suggestions while typing" android:defaultValue="true"/>
    <SwitchPreferenceCompat android:key="swipe_typing" android:title="Swipe Typing" android:summary="Enable gesture/swipe typing" android:defaultValue="true"/>
    <SwitchPreferenceCompat android:key="double_space_period" android:title="Double Space Period" android:summary="Double tap space to insert period" android:defaultValue="true"/>
    <SwitchPreferenceCompat android:key="autocapitalisation" android:title="Auto-Capitalize" android:summary="Capitalize first letter of sentences" android:defaultValue="true"/>
    <SwitchPreferenceCompat android:key="clipboard_history_enabled" android:title="Clipboard History" android:summary="Save clipboard items for quick access" android:defaultValue="true"/>
  </PreferenceCategory>
  <PreferenceCategory android:title="Appearance">
    <ListPreference android:key="theme" android:title="Theme" android:summary="%s" android:defaultValue="jewel" android:entries="@array/pref_theme_entries" android:entryValues="@array/pref_theme_values"/>
    <SeekBarPreference android:key="horizontal_margin" android:title="Horizontal Margin" android:defaultValue="0" android:max="50" app:showSeekBarValue="true"/>
    <SeekBarPreference android:key="bottom_margin" android:title="Bottom Margin" android:defaultValue="0" android:max="50" app:showSeekBarValue="true"/>
  </PreferenceCategory>
  <PreferenceCategory android:title="Behavior">
    <SeekBarPreference android:key="longpress_interval" android:title="Long Press Interval (ms)" android:defaultValue="25" android:max="100" app:showSeekBarValue="true"/>
    <SeekBarPreference android:key="longpress_timeout" android:title="Long Press Timeout (ms)" android:defaultValue="600" android:max="1000" app:showSeekBarValue="true"/>
    <SwitchPreferenceCompat android:key="vibrate" android:title="Vibration" android:summary="Vibrate on key press" android:defaultValue="true"/>
    <SeekBarPreference android:key="vibrate_duration" android:title="Vibration Duration (ms)" android:defaultValue="20" android:max="100" android:dependency="vibrate" app:showSeekBarValue="true"/>
  </PreferenceCategory>
  <PreferenceCategory android:title="Neural Swipe">
    <SwitchPreferenceCompat android:key="neural_enabled" android:title="Neural Prediction" android:summary="Use neural network for swipe typing" android:defaultValue="true"/>
    <Preference android:key="neural_performance_stats" android:title="Neural Settings" android:summary="Configure neural model"/>
    <Preference android:key="swipe_calibration" android:title="Swipe Calibration" android:summary="Calibrate swipe sensitivity"/>
    <Preference android:key="neural_load_encoder" android:title="Load Encoder Model" android:summary="Load external encoder ONNX file"/>
    <Preference android:key="neural_load_decoder" android:title="Load Decoder Model" android:summary="Load external decoder ONNX file"/>
    <Preference android:key="neural_model_metadata" android:title="Model Information" android:summary="View loaded model details"/>
  </PreferenceCategory>
  <PreferenceCategory android:title="A/B Testing">
    <Preference android:key="ab_test_status" android:title="Test Status" android:summary="View current A/B test progress"/>
    <Preference android:key="ab_test_comparison" android:title="Model Comparison" android:summary="Compare model performance metrics"/>
    <Preference android:key="ab_test_configure" android:title="Configure Test" android:summary="Set up A/B test parameters"/>
    <Preference android:key="ab_test_export" android:title="Export Data" android:summary="Export comparison data as JSON"/>
    <Preference android:key="ab_test_reset" android:title="Reset Test" android:summary="Clear all A/B test data"/>
  </PreferenceCategory>
  <PreferenceCategory android:title="Rollback and Recovery">
    <Preference android:key="rollback_status" android:title="Version Status" android:summary="View model version and health"/>
    <Preference android:key="rollback_history" android:title="Version History" android:summary="View all model versions"/>
    <Preference android:key="rollback_manual" android:title="Manual Rollback" android:summary="Force rollback to previous version"/>
    <Preference android:key="rollback_pin_version" android:title="Pin Version" android:summary="Lock current model version"/>
    <Preference android:key="rollback_export" android:title="Export History" android:summary="Export version history as JSON"/>
    <Preference android:key="rollback_reset" android:title="Reset History" android:summary="Clear all version data"/>
  </PreferenceCategory>
  <PreferenceCategory android:title="Privacy and Data">
    <Preference android:key="privacy_status" android:title="Privacy Status" android:summary="View privacy settings summary"/>
    <Preference android:key="privacy_consent" android:title="Data Collection Consent" android:summary="Grant or revoke consent"/>
    <Preference android:key="privacy_delete_now" android:title="Delete All Data" android:summary="Immediately delete collected data"/>
    <Preference android:key="privacy_export" android:title="Export Data" android:summary="Export collected data"/>
    <Preference android:key="privacy_audit" android:title="Privacy Audit Trail" android:summary="View privacy action history"/>
  </PreferenceCategory>
  <PreferenceCategory android:title="Backup">
    <Preference android:key="backup_config" android:title="Export Configuration" android:summary="Save settings to JSON"/>
    <Preference android:key="restore_config" android:title="Import Configuration" android:summary="Restore settings from JSON"/>
    <Preference android:key="export_custom_dictionary" android:title="Export Dictionary" android:summary="Save custom words"/>
    <Preference android:key="import_custom_dictionary" android:title="Import Dictionary" android:summary="Load custom words"/>
  </PreferenceCategory>
  <PreferenceCategory android:title="About">
    <Preference android:key="version_info" android:title="Version Info" android:summary="Loading..."/>
    <Preference android:key="check_updates" android:title="Check for Updates" android:summary="Look for new APK files"/>
    <Preference android:key="update_app" android:title="Install Update" android:summary="Install from /sdcard/Download/cleverkeys.apk"/>
  </PreferenceCategory>
</PreferenceScreen>
